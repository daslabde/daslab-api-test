{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "isolatedModules": false,
      "resolveJsonModule": true,
      "lib": [
         "es6",
         "dom"
      ],
      "moduleResolution": "node",
   },
   "include": [
      "src/**/*",
      "config/**/*"
   ],
   "exclude": [
      "node_modules",
      ".vscode"
   ]
}